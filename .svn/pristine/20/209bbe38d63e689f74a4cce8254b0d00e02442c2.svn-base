package com.zc.relay.handler;

import com.zc.relay.dto.DeviceFunctionValue;

/**
 * 接收设备实时数据接口
 * @author Athena-xiepufeng
 */
public interface DeviceDataAcceptor
{
    /**
     * 接收设备实时数据
     * @param deviceFunctionValue 设备实时数据
     */
    void dataReceive(DeviceFunctionValue deviceFunctionValue);

    /**
     * 设备控制响应
     * @param identifier 消息标识
     * @param deviceId 设备id
     * @param functionId 功能id
     * @param state 操作状态 1成功 0 失败
     */
    void controlResponse(String identifier,
                         //Long deviceId,
                         //Long functionId,
                         Integer state);

    /**
     * 设备状态变化
     * @param deviceId 设备id
     * @param state 在线状态 1 在线 0 离线
     */
    void deviceStateChange(Long deviceId,
                           Integer state);
}
