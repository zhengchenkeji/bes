package com.zc.relay.handler;

import com.alibaba.fastjson.JSONObject;

/**
 * 设备操作
 *
 * @author Athena-xiepufeng
 */
public interface DeviceOperation
{
    /**
     * 设置属性
     * @param identifier 消息标识
     * @param deviceId 设备id
     * @param functionId 功能id
     * @param value 属性值
     * @return 是否操作成功
     */
    boolean setAttribute(String identifier,
                      Long deviceId,
                      Long functionId,
                      Number value);

    /**
     * 获取属性
     * @param identifier 消息标识
     * @param deviceId 设备id
     * @param functionId 功能id
     * @return 属性值
     */
    Number getAttribute(String identifier,
                      Long deviceId,
                      Long functionId);

    /**
     * 服务调用
     * @param identifier 消息标识
     * @param deviceId 设备id
     * @param functionId 功能id
     * @param value 服务数据
     * @return 是否操作成功
     */
    boolean serveInvoke(String identifier,
                        Long deviceId,
                        Long functionId,
                        JSONObject value);

}
