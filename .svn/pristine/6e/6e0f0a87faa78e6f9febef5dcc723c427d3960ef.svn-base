import request from '@/utils/request'

/***************************************获取场景区域信息****************************************************/
export function sceneConfigAreaListInfo(query) {
  return request({
    url: '/deviceManagement/scheduling/scenarioConfig/sceneConfigAreaListInfo',
    method: 'post',
    params: query
  })
}

