<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zc.iot.mapper.IotProductMapper">
    
    <resultMap type="IotProduct" id="IotProductResult">
        <result property="id"    column="id"    />
        <result property="productName"    column="product_name"    />
        <result property="productCode"    column="product_code"    />
        <result property="categoryId"    column="category_id"    />
        <result property="protocolId"    column="protocol_id"    />
        <result property="publishState"    column="publish_state"    />
        <result property="transportProtocol"    column="transport_protocol"    />
        <result property="metadata"    column="metadata"    />
        <result property="configuration"    column="configuration"    />
        <result property="nodeType"    column="node_type"    />
        <result property="description"    column="description"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <association property="category" javaType="IotCategory" resultMap="IotCategoryResult" />
    </resultMap>

    <resultMap type="IotCategory" id="IotCategoryResult">
        <result property="categoryMark"    column="category_mark"    />
        <result property="parentId"    column="parent_id"    />
        <result property="categoryName"    column="category_name"    />
    </resultMap>

    <sql id="selectIotProductVo">
        select
               id,
               product_name,
               product_code,
               category_id,
               protocol_id,
               publish_state,
               transport_protocol,
               metadata,
               configuration,
               node_type,
               description,
               create_time,
               update_time
        from
             athena_iot_product
    </sql>

    <select id="selectIotProductList" parameterType="IotProduct" resultMap="IotProductResult">
        select
               p.id,
               p.product_name,
               p.product_code,
               p.category_id,
               p.protocol_id,
               p.publish_state,
               p.transport_protocol,
               p.metadata,
               p.configuration,
               p.node_type,
               p.description,
               p.create_time,
               p.update_time,
               c.category_mark,
               c.parent_id,
               c.category_name
        from
             athena_iot_product p
            left join
             athena_iot_category c
            on p.category_id = c.id
        <where>  
            <if test="productName != null  and productName != ''"> and product_name like concat('%', #{productName}, '%')</if>
            <if test="productCode != null  and productCode != ''"> and product_code like concat('%', #{productCode}, '%')</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="nodeType != null "> and node_type = #{nodeType}</if>
            <if test="publishState != null "> and publish_state = #{publishState}</if>
        </where>
    </select>
    
    <select id="selectIotProductById" parameterType="Long" resultMap="IotProductResult">
        <include refid="selectIotProductVo"/>
        where id = #{id}
    </select>

    <select id="selectIotProductByProductCode" parameterType="String" resultMap="IotProductResult">
        <include refid="selectIotProductVo"/>
        where product_code = #{productCode}
    </select>

    <insert id="insertIotProduct" parameterType="IotProduct">
        insert into athena_iot_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="productName != null and productName != ''">product_name,</if>
            <if test="productCode != null and productCode != ''">product_code,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="protocolId != null">protocol_id,</if>
            <if test="publishState != null">publish_state,</if>
            <if test="transportProtocol != null">transport_protocol,</if>
            <if test="metadata != null">metadata,</if>
            <if test="configuration != null">configuration,</if>
            <if test="nodeType != null">node_type,</if>
            <if test="description != null">description,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="productName != null and productName != ''">#{productName},</if>
            <if test="productCode != null and productCode != ''">#{productCode},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="protocolId != null">#{protocolId},</if>
            <if test="publishState != null">#{publishState},</if>
            <if test="transportProtocol != null">#{transportProtocol},</if>
            <if test="metadata != null">#{metadata},</if>
            <if test="configuration != null">#{configuration},</if>
            <if test="nodeType != null">#{nodeType},</if>
            <if test="description != null">#{description},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateIotProduct" parameterType="IotProduct">
        update athena_iot_product
        <trim prefix="SET" suffixOverrides=",">
            <if test="productName != null and productName != ''">product_name = #{productName},</if>
            <if test="productCode != null and productCode != ''">product_code = #{productCode},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="protocolId != null">protocol_id = #{protocolId},</if>
            <if test="publishState != null">publish_state = #{publishState},</if>
            <if test="transportProtocol != null">transport_protocol = #{transportProtocol},</if>
            <if test="metadata != null">metadata = #{metadata},</if>
            <if test="configuration != null">configuration = #{configuration},</if>
            <if test="nodeType != null">node_type = #{nodeType},</if>
            <if test="description != null">description = #{description},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteIotProductById" parameterType="Long">
        delete from athena_iot_product where id = #{id}
    </delete>

    <delete id="deleteIotProductByIds" parameterType="String">
        delete from athena_iot_product where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>