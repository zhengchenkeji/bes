<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zc.iot.mapper.IotFunctionAnalysisMapper">
    
    <resultMap type="IotFunctionAnalysis" id="IotFunctionAnalysisResult">
        <result property="analysisType"    column="analysis_type"    />
        <result property="typeName"    column="type_name"    />
    </resultMap>

    <sql id="selectIotFunctionAnalysisVo">
        select analysis_type, type_name from athena_iot_function_analysis
    </sql>

    <select id="selectIotFunctionAnalysisList" parameterType="IotFunctionAnalysis" resultMap="IotFunctionAnalysisResult">
        <include refid="selectIotFunctionAnalysisVo"/>
        <where>  
            <if test="typeName != null  and typeName != ''"> and type_name like concat('%', #{typeName}, '%')</if>
        </where>
    </select>
    
    <select id="selectIotFunctionAnalysisByAnalysisType" parameterType="String" resultMap="IotFunctionAnalysisResult">
        <include refid="selectIotFunctionAnalysisVo"/>
        where analysis_type = #{analysisType}
    </select>
        
    <insert id="insertIotFunctionAnalysis" parameterType="IotFunctionAnalysis">
        insert into athena_iot_function_analysis
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="analysisType != null">analysis_type,</if>
            <if test="typeName != null and typeName != ''">type_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="analysisType != null">#{analysisType},</if>
            <if test="typeName != null and typeName != ''">#{typeName},</if>
         </trim>
    </insert>

    <update id="updateIotFunctionAnalysis" parameterType="IotFunctionAnalysis">
        update athena_iot_function_analysis
        <trim prefix="SET" suffixOverrides=",">
            <if test="typeName != null and typeName != ''">type_name = #{typeName},</if>
        </trim>
        where analysis_type = #{analysisType}
    </update>

    <delete id="deleteIotFunctionAnalysisByAnalysisType" parameterType="String">
        delete from athena_iot_function_analysis where analysis_type = #{analysisType}
    </delete>

    <delete id="deleteIotFunctionAnalysisByAnalysisTypes" parameterType="String">
        delete from athena_iot_function_analysis where analysis_type in 
        <foreach item="analysisType" collection="array" open="(" separator="," close=")">
            #{analysisType}
        </foreach>
    </delete>
</mapper>