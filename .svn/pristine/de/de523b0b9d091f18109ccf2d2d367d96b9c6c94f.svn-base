package com.zc.connect.analysis;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import java.util.List;

/**
 * @author Athena-YangChao
 * @description Context上下文类
 * @date 2021/12/8/008
 * @apiNote
 */
@Component
public class AnalysisStrategyFactory {
    @Autowired
    private List<AnalysisStrategy> strategyList;

    /**
     * 获取策略实例
     * @param type
     * @return
     */
    public AnalysisStrategy getImpl(String type) {
        return strategyList.stream()
                .filter(strategy -> strategy.isTypeMatch(type))
                .findAny()
                .orElseThrow(() -> new RuntimeException("没有找到策略实现"));
    }

}
